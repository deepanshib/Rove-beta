<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/explore_by_d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.sam.rove.Explore"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/binoculars"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EXPLORE"
            android:fontFamily="sans-serif-light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
android:textColor="#fff"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/food"
                android:layout_width="match_parent"

                android:layout_height="0dp"

                android:layout_weight="1.13"

                android:scaleType="fitXY"
                android:src="@drawable/food"
                android:layout_marginBottom="12dp"/>
    <LinearLayout
        android:id="@+id/main_activity_root"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:layout_weight="1">
        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/easyFlipView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flipOnTouch="false"
            app:flipDuration="500"
            app:flipEnabled="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgBackCard"
                android:background="@color/neon1"

                android:layout_alignParentStart="true">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:gravity="center"
                    android:text="OLA"
                    android:id="@+id/ola"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="19dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UBER"
                    android:id="@+id/uber"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/ola"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/imgFrontCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/cabs1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/cabs1" />
            </RelativeLayout>
        </com.wajahatkarim3.easyflipview.EasyFlipView>


    </LinearLayout>


            <ImageView
                android:id="@+id/mapButton"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.83"
                android:backgroundTint="@android:color/background_light"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:src="@drawable/map"



                android:scaleType="centerCrop" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/accomodation4"

                android:layout_width="match_parent"

                android:layout_height="0dp"

                android:layout_weight="1.15"

                android:layout_marginBottom="12dp"


                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/accomodation4" />
            <LinearLayout
                android:id="@+id/main_activity_root2"
                android:layout_width="match_parent"

                android:layout_height="0dp"
                android:layout_weight="0.72"
                android:layout_marginBottom="12dp"
              >
                <com.wajahatkarim3.easyflipview.EasyFlipView
                    android:id="@+id/easyFlipView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flipOnTouch="false"
                    app:flipDuration="500"
                    app:flipEnabled="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:id="@+id/imgBackCard2"
                        android:background="@color/neon1"
                        android:layout_alignParentStart="true">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="BUS"
                            android:id="@+id/bus"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="9dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" METRO"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:id="@+id/metro"
                            android:gravity="center"
                            android:paddingRight="75dp"
                            android:layout_marginTop="38dp"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/imgFrontCard2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/Trans"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/pt" />

                    </RelativeLayout>
                </com.wajahatkarim3.easyflipview.EasyFlipView>
            </LinearLayout>




            <ImageView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
android:id="@+id/nearby"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nearby" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
