<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/bg">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg">

                <FrameLayout
                    android:layout_width="124dp"
                    android:layout_height="154dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.636"
                    android:id="@+id/frameLayout">

                    <ImageView
                        android:id="@+id/imgBtnProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <Button
                        android:id="@+id/btnGallery"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:background="#00000000"
                        android:layout_gravity="bottom|right"
                        android:text="gal"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btnCamera"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_gravity="bottom|left"
                        android:background="#00000000"
                        android:text="cam"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                </FrameLayout>

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="102dp"
                    android:layout_height="38dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                  android:hint="USERNAME"
                    android:textSize="20sp"
                    android:textColor="#000"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    android:layout_marginLeft="28dp" />

                <EditText
                    android:id="@+id/etTravellingWith"
                    android:layout_width="167dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="28dp"
                    android:ems="10"
                    android:textColor="#000"
                    android:hint="travelling with"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/etUserName" />

                <ImageButton
                    android:id="@+id/imgBtnEdit"
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#00000000"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    tools:layout_editor_absoluteX="323dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER_NAME"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    android:layout_marginLeft="32dp" />

                <TextView
                    android:id="@+id/tvTravelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="24dp"
                    android:text="Travelling...."
                    android:textSize="20dp"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/memories"
                    android:layout_width="197dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_toStartOf="@+id/logOut"
                    android:background="@drawable/memo"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_weight="0.06"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="90dp"
                    android:layout_height="200dp"
                 android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    app:srcCompat="@color/colorAccent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >
                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="90dp"
                    android:layout_height="185dp"
android:layout_margin="10dp"                    app:srcCompat="@android:color/holo_orange_light"
                    android:layout_weight="0.5" />

                <Button
                    android:id="@+id/logOut"
                    android:layout_width="203dp"
                    android:layout_height="185dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/logoutn"
                    android:text="  I've completed my trip !!!"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp" />
    </LinearLayout>

</ScrollView>
