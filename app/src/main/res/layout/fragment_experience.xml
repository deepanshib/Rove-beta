<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.me.sam.rove.Experience"
    android:background="@drawable/bg">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutExperience">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cvTourist"
                android:layout_width="325dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                card_view:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/delhi" />

                <TextView
                    android:id="@+id/tourist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="TOURIST"
                    android:textColor="#fff"
                    android:textSize="50dp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cvTraveller"
                android:layout_width="325dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                card_view:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gate" />

                <TextView
                    android:id="@+id/traveller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="TRAVELLER"
                    android:textColor="#fff"
                    android:textSize="50dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cvExplorer"
                android:layout_width="325dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                card_view:cardCornerRadius="10dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/preview" />

                <TextView
                    android:id="@+id/explorer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="EXPLORER"
                    android:textColor="#fff"

                    android:textSize="50dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </FrameLayout>
</ScrollView>

